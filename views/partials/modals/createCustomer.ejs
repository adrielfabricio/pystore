<div
  class="modal fade"
  id="createCustomerModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="createCustomerModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createCustomerModalLabel">
					Criar novo cliente
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form method="POST" id="createCustomerForm" action="/customers">
					<div class="form-group">
            <label for="customerName">Nome do cliente</label>
            <input
							type="text"
              class="form-control"
              id="customerName"
              name="name"
              placeholder="Nome do cliente"
              value=""
            />
          </div>

          <div class="form-group">
            <label for="customerEmail">E-mail</label>
            <input
							type="text"
              class="form-control"
              id="customerEmail"
              placeholder="E-mail"
              name="email"
              value=""
            />
          </div>

          <div class="form-group">
            <label for="customerAddress">Endereço</label>
            <input
              type="text"
              class="form-control"
              id="customerAddress"
              placeholder="Endereço"
              name="address"
              value="" />
          </div>

					<div class="form-group">
            <label for="customeCep">CEP</label>
            <input
              type="number"
              class="form-control"
              id="customeCep"
              placeholder="CEP"
              name="cep"
              value="" />
          </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Criar</button>
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal">
              Fechar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
