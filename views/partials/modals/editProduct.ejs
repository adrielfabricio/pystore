<div
  class="modal fade"
  id="adminProductModal<%= product.id %>"
  tabindex="-1"
  role="dialog"
  aria-labelledby="adminProductModalLabel<%= product.id %>"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="adminProductModalLabel<%= product.id %>">
          <%= product.name %>
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <form
          method="POST"
          id="edit-product-form-<%= product.id %>"
          action="/products/<%= product.id %>?_method=PUT">
          <div class="form-group row">
            <label for="productId" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
              <input
                type="text"
                readonly
                class="form-control-plaintext"
                id="productId"
                name="id"
                value="<%= product.id %>" />
            </div>
          </div>

          <div class="form-group">
            <label for="productName">Nome do produto</label>
            <input
              type="text"
              class="form-control"
              id="productName"
              placeholder="Nome do produto"
              name="name"
              value="<%= product.name %>" />
          </div>
          <div class="form-group">
            <label for="productDescription">Descrição</label>
            <textarea
              class="form-control"
              id="productDescription"
              rows="3"
              name="description"><%= product.description %></textarea
            >
          </div>

          <div class="form-group">
            <label for="productPrice">Imagem do produto</label>
            <input
              type="file"
              class="form-control"
              id="productImage"
              placeholder="Imagem"
              name="image"
              value="<%= product.image %>" />
          </div>

          <div class="form-group">
            <label for="productPrice">Preço</label>
            <input
              type="number"
              class="form-control"
              id="productPrice"
              placeholder="Preço"
              name="price"
              value="<%= product.price %>" />
          </div>

          <div class="form-group">
            <label for="productCategory">Categoria</label>
            <input
              type="text"
              class="form-control"
              id="productCategory"
              placeholder="Categoria"
              name="category"
              value="<%= product.category %>" />
          </div>

          <div class="form-group">
            <label for="productStock">Estoque</label>
            <input
              type="number"
              class="form-control"
              id="productStock"
              placeholder="Estoque"
              name="stock"
              value="<%= product.stock %>" />
          </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Atualizar</button>
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal">
              Fechar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
